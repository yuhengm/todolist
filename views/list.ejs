<%- include("header") -%> 
    <div class="box heading-box" id="heading">
      <h1><%=listTitle%></h1>
    </div>

    <div class="list-category">
      <form action="/" method="get">
        <button type="submit" class="link-btn">Today</button>
      </form>
      <form action="/home" method="get">
        <button type="submit" class="link-btn">Home</button>
      </form>
      <form action="/work" method="get">
        <button type="submit" class="link-btn">Work</button>
      </form>
      <form action="/other" method="get">
        <button type="submit" class="link-btn">Other</button>
      </form>
    </div>

    <div class="box">

        <!-- Interesting way of writing for-loop using EJS -->
        <% for (var item of newListItems) { %>

          <form action="/delete" method="post">
            <div class="item">
              <!-- bind checkbox with item _id for database manipulations. value is accessed by name -->
              <input type="checkbox" name="checkbox" value=<%=item._id %> onchange="this.form.submit()" />
              <p><%= item.name %></p>
            </div>
            <!-- Needed to retrieve title name! -->
            <input type="hidden" name="listName" value="<%= listTitle %>"></input>
          </form>
        <% } %>

      <form class="item" action="/" method="post">
        <input
          type="text"
          name="newItem"
          placeholder="New Item"
          autocomplete="off"
        />
        <button type="submit" class="submit-btn" name="list" value="<%=listTitle %>" >
          <i class="fa fa-sm fa-plus" aria-hidden="true"></i>
        </button>
      </form>
    </div>

<%- include("footer") -%> 